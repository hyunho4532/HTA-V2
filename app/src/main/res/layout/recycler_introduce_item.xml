<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_click_me"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvHelloName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/original"
                android:text="안녕하세요! "
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/ivProfileSet"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNameHelloView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/original"
                android:text="본인 이름 소개"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvHelloName"
                app:layout_constraintStart_toEndOf="@+id/tvHelloName"
                app:layout_constraintTop_toTopOf="@+id/tvHelloName" />

            <TextView
                android:id="@+id/tvNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/happiness_sans_bold"
                android:text="본인 이름"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/ivProfileSet"
                app:layout_constraintTop_toTopOf="@+id/ivProfileSet" />

            <TextView
                android:id="@+id/tvHobbyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/happiness_sans_bold"
                android:text="본인 취미"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tvNameText"
                app:layout_constraintTop_toBottomOf="@+id/tvNameText" />

            <TextView
                android:id="@+id/tv_latitude_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_hardness_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/ivProfileSet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHelloName"
                app:srcCompat="@drawable/fragment_user_icon" />

            <ImageView
                android:id="@+id/iv_heart_click"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/adapter_heart_turn_off" />

            <TextView
                android:id="@+id/tvTotalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/classic_font"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/iv_heart_click"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_heart_click"
                app:layout_constraintTop_toTopOf="@+id/iv_heart_click" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>